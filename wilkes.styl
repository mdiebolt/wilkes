$width = 645px

body
  margin: auto
  width: $width

.overlay
  background-color: rgba(0, 0, 0, 0.75)
  display: none
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%
  z-index: 500

  div
    margin: auto
    margin-top: 43px
    width: $width

  img
    box-shadow: white 0 0 15px
    z-index: 501

.title
  font-family: Futura
  font-weight: 100
  margin: 0
  text-align: center

.previews
  width: 645px
  overflow: auto
  white-space: nowrap
  -webkit-user-select: none

canvas
  border-radius: 5px
  display: none

video
  -webkit-transform: scaleX(-1)

  background: rgba(255,255,255,0.5)
  border: 1px solid #ccc
  cursor: pointer

.take_photo
  background-repeat: no-repeat
  background-image: url('/camera.png')
  cursor: pointer
  margin: auto
  width: 39px
  height: 38px
  margin-top: 10px
  margin-bottom: 5px

  &:active
    background-image: url('/camera_active.png')

.preview
  border: 1px solid rgba(0, 0, 0, 0.3)
  box-shadow: rgba(0, 0, 0, 0.3) 0 0 5px
  height: 85px
  margin-right: 10px
  padding: 3px

.grayscale
  -webkit-filter: grayscale(1)

.sepia
  -webkit-filter: sepia(1)

.blur
  -webkit-filter: blur(3px)

.brightness
  -webkit-filter: brightness(0.5)

.contrast
  -webkit-filter: contrast(2)

.hue-rotate
  -webkit-filter: hue-rotate(60deg)

.hue-rotate2
  -webkit-filter: hue-rotate(120deg)

.hue-rotate3
  -webkit-filter: hue-rotate(180deg)
