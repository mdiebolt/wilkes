body
  margin: auto
  width: 645px

.title
  font-family: Futura
  font-weight: 100
  margin: 0.25em 0
  text-align: center

.previews
  width: 645px
  overflow: auto
  white-space: nowrap

canvas
  border-radius: 5px
  display: none

video
  background: rgba(255,255,255,0.5)
  border: 1px solid #ccc
  cursor: pointer

.take_photo
  background-image: url('/camera.svg')
  cursor: pointer
  margin: auto
  margin-top: -15px
  width: 90px
  height: 90px

.preview
  border: 1px solid rgba(0, 0, 0, 0.3)
  box-shadow: rgba(0, 0, 0, 0.3) 0 0 5px
  height: 50px
  margin-right: 10px
  padding: 3px

.grayscale
  -webkit-filter: grayscale(1)

.sepia
  -webkit-filter: sepia(1)

.blur
  -webkit-filter: blur(3px)

.brightness
  -webkit-filter: brightness(0.5)

.contrast
  -webkit-filter: contrast(2)

.hue-rotate
  -webkit-filter: hue-rotate(60deg)

.hue-rotate2
  -webkit-filter: hue-rotate(120deg)

.hue-rotate3
  -webkit-filter: hue-rotate(180deg)
